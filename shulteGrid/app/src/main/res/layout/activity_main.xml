    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/titleTv"
        android:text="舒尔特表"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        app:reflectionColor="@color/lightblue"
        android:typeface="monospace"/>


    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/button33"
        android:text="3 X 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titleTv"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/button_start"
        app:reflectionColor="@color/lightblue"
    />
    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/button44"
        android:text="4 X 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button33"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/button_start"
        app:reflectionColor="@color/lightblue"
        />
    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/button55"
        android:text="5 X 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button44"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/button_start"
        app:reflectionColor="@color/lightblue"
        />
    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/button66"
        android:text="6 X 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button55"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/button_start"
        app:reflectionColor="@color/lightblue"
        />


    <com.romainpiel.shimmer.ShimmerButton
        android:id="@+id/buttonExit"
        android:text="退 出"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button66"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/button_exit"
        app:reflectionColor="@color/lightblue"
        />



