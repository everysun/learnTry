<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_win"
    android:background="@color/seagreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="所用时间为"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:reflectionColor="@color/lightblue" />


    <TextView
        android:text="3*3最快时间："
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shimmerButton"
        android:layout_marginTop="29dp"
        android:id="@+id/timethree" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/shimmerTextView"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:gravity="center"
        android:text="233"
        android:textColor="#0f0"
        android:textSize="50dp" />

    <com.romainpiel.shimmer.ShimmerButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:text="重新开始"
        app:reflectionColor="@color/lightblue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/shimmerButton"
        android:background="@drawable/button_start"
        android:padding="10dp"/>



    <TextView
        android:text="5*5最快时间："
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timefive"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/timefour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="6*6最快时间："
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timesix"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/timefive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="4*4最快时间："
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timefour"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/timethree"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
